{
  "name": "gig",
  "version": "0.1.0",
  "description": "Terminal-based business management for developers",
  "author": "Jubal Mabaquiao <https://github.com/jubalm>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "gig": "./bin/gig.js"
  },
  "files": [
    "bin/",
    "README.md",
    "docs/",
    "install.sh"
  ],
  "scripts": {
    "build": "npx esbuild src/index.ts --bundle --platform=node --format=esm --outfile=bin/gig.js && chmod +x bin/gig.js",
    "format": "npx @biomejs/biome format --write ./src",
    "lint": "npx @biomejs/biome lint ./src",
    "check": "npx @biomejs/biome check ./src",
    "check:fix": "npx @biomejs/biome check --write ./src"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "business",
    "freelance",
    "git",
    "terminal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jubalm/gig.git"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "typescript": "^5.9.2"
  }
}
